<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_bg"
    tools:context="com.danielj.priisvergliich.Activities.MainActivity">

    <Button
        android:id="@+id/btn_coopLocator"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="400dp"
        android:backgroundTint="@color/button_colour"
        android:text="@string/nearest_coop"
        android:visibility="visible"
        tools:visibility="visible"
        />
    <Button
        android:id="@+id/btn_migrosLocator"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="300dp"
        android:backgroundTint="@color/button_colour"
        android:text="@string/nearest_migros"
        android:visibility="visible"
        tools:visibility="visible"
        />
    <Button
        android:id="@+id/btn_savedComparisons"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="200dp"
        android:backgroundTint="@color/button_colour"
        android:text="@string/saved_comparisons"
        android:visibility="visible"
        tools:visibility="visible"
        />

    <Button
        android:id="@+id/btn_receiptScanner"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:backgroundTint="@color/button_colour"
        android:text="@string/scan_receipt"
        android:visibility="visible"
        tools:visibility="visible"
        />

    <ProgressBar
        android:id="@+id/pb_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        />

    <ListView
        android:id="@+id/lv_productList"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        />

    <Button
        android:id="@+id/btn_goToComparisonList"
        android:backgroundTint="@color/swiss_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:text="@string/to_comparison_list"
        android:visibility="visible"
        tools:visibility="visible"
        />

</RelativeLayout>